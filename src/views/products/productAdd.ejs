<!DOCTYPE html>
<html>
    <%- include('../partial/head') %>
    <body>
        <%- include('../partial/headerAdmin') %>
        <main class="main-register">
            <div class="div-forms-register div-register-addProd">

                <form action="/products/add" method="POST" id="idFormAddProduct" class="forms-register" enctype="multipart/form-data"> 
                    
                    <h2 class="titulo-register">Agregar producto</h2>
                    <div class="div-register">
                        <label for="name" class="label-register">Nombre del producto</label>
                        <input type="text" placeholder="Notebook Dell G15" name="name" id="name" class="input-register"  value="<%= (locals.oldData && oldData.name) && oldData.name %>">
                        <span id="error-name" class="text-danger"><%= (locals.errors && errors.name) && errors.name.msg %></span> 
                    </div>
                    <div class="div-register">
                        <label for="price" class="label-register" >Precio del producto</label>
                        <input type="number" name="price" id="price" placeholder="$100000" class="input-register" value="<%= (locals.oldData && oldData.price) && oldData.price %>">
                        <span id="error-price" class="text-danger"><%= (locals.errors && errors.price) && errors.price.msg  %></span> 
                    </div>

                    <div class="div-register">
                        <label for="category" class="label-register">Categoría del producto</label>
                        <select name="category" id="category" class="input-register" value="<%= (locals.oldData && oldData.category) && oldData.category %>">
                            <option value="" hidden selected>Elegí la categoría</option>
                            <% categories.forEach(category => { %>
                                <option value="<%= category.id %>" ><%= category.name %></option>
                            <% }) %>
                        </select>
                        <span id="error-category" class="text-danger"><%= (locals.errors && errors.category) && errors.category.msg  %></span> 
                    </div>
                    
                    <div class="div-register div-reg-imgProd">
                        <p class="label-register">Fotos del producto</p>
                        <label for="productImage" class="label-register btn-mas-menos label-reg-file">Agregar</label>

                        <input multiple type="file" name="productImage" id="productImage" class="input-register input-reg-file" accept=".png, .jpg, .jpeg" value="<%= (locals.oldData && oldData.productImage) && oldData.productImage%>">
                        <span id="error-image" class="text-danger"><%= (locals.errors && errors.existFile) && errors.existFile.msg  %></span>
                        <div id="previewImages" class="div-prev-image">
                            
                        </div>
                    </div>
                    
                    <div class="div-register">
                        <label for="discount" class="label-register">Descuento</label>
                        <input type="number" placeholder="20" name="discount" maxlength="2" id="discount" class="input-register" value="<%= (locals.oldData && oldData.discount) ? oldData.discount : 0%>">
                        <span id="error-discount" class="text-danger"><%= (locals.errors && errors.discount) && errors.discount.msg  %></span>
                    </div>

                    <div class="div-register">
                        <label for="description" class="label-register">Descripción del producto</label>
                        <textarea name="description" id="description" class="input-register txta-reg-desc" minlength="20" placeholder="Notebook con 8 de RAM, GTX 3050..." value="<%= (locals.oldData && oldData.description) && oldData.description %>" ></textarea>
                        <span id="error-description" class="text-danger"><%= (locals.errors && errors.description) && errors.description.msg  %></span>
                    </div>
                    
                    <div class="div-button-register">
                        <button type="submit" class="btn-mas-menos button-register-submit">Publicar</button>
                        <button type="reset" class="btn-mas-menos button-register-reset" id="btn-reset">Cancelar</button>
                    </div>
                    <span id="errorForm"><%= (locals.errors && errors.idFormAddProduct) && errors.idFormAddProduct.msg  %></span>
                </form>
            </div>
        </main>
        <%- include('../partial/footer') %> 
        <script src="/javascripts/previewImages.js"></script>
        <script src="/javascripts/validationsProductsAdd.js"></script>
    </body>
</html>